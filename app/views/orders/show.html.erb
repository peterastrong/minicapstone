

<h3>order for <%= current_user.name %></h3>
<p> Order #: <%= @order.id %></p>
<p>Subtotal: <%= @order.subtotal %></p>
<p>Tax: <%= @order.tax %></p>
<p>Total:<%= @order.total %></p>
<p>Orderer's email: <%= @order.user.email %></p>
<p>Bought: </p>
<% @order.carted_products.each do |carted_product|%>
  
        <p><%= carted_product.beer.name %></p>
        <p><%= carted_product.quantity %></p>
        <img src="<%= carted_product.beer.images.first.url %>">
   
<% end %>

<p>Created at: <%= @order.created_at.strftime("%m/%d/%Y") %></p>