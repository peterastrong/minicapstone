<%= form_tag "/suppliers", method: :post do %>
  
  <div class="form-group">
    Brewery Name:
    <input type="text" name="name">
  </div >
  
  <div class="form-group">
    email:
    <input type="email" name="email">
  </div>

  <div class="form-group">
    phone:
    <input type="text" name="phone">
  </div>

  <div class="form-group">
    <input type="submit" value="Enter Supplier">
  </div>

<% end %>